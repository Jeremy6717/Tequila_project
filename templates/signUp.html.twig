{% extends "layout.html.twig" %}

{% block header %}
    {% include 'headerReport.html.twig' %}
{% endblock %}


{% block content %}
    
    {{ form_start(form)}}
        <div class="grid-container" id="form">
            <fieldset>
                <h2>Sing up</h2>
                    <div class="grid-x grid-padding-x" id="form_data">
                        <div>
                            {{ form_row(form.firstname) }}
                            {{ form_row(form.lastname) }}
                            {{ form_row(form.username) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.password) }}
                            {{ form_row(form.submit) }}
                        </div>
                        <div>
                            <label>Do you want receive monthly report ?</label>
                            <input type="checkbox" name="user_newsletter" id="checkBox_report">
                        </div>
                        <div>
                            <label>Do you want receive newsletter ?</label>
                            <input type="checkbox" name="user_newsletter" id="checkBox_newsletter">
                        </div>

                        <div class="g-recaptcha" data-sitekey="6LcisTwUAAAAAClgE-1c8OteBGKiGZb3xpV1hAwR"></div>
            </fieldset>
        </div>
    {{ form_end(form) }}

{% endblock %}





{% block footer %}
    {% include 'footer.html.twig' %}
{% endblock %}  

