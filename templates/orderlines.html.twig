{% extends "layout.html.twig" %}

{% block header %}
    {% include 'headerReport.html.twig' %}
{% endblock %}


{% block content %}
    {{ parent() }}
    
    <h3>Sales Report With VAT</h3>
    <table border="1">
        <thead>
            <tr>
                <td> DATE OF PURCHASE</td>
                <td> ORDER NUMBER</td>
                <td> TYPE OF PAYMENT</td>
                <td> CUSTOMER ACCOUNT NUMBER</td>
                <td> PRODUCT ID</td>
                <td> QUANTITY</td>
                <td> PRICE</td>
                <td> SHIPPING COST</td>
                <td> TAX INCLUSIVE</td>
                <td> TAX EXCLUSIVE</td>
                <td> VAT</td>
                
            </tr>
        </thead>
        <tbody>
            {% for orderline in orderlines %}
                <tr>
                    <td>{{ orderline.getOrder().getDate() }}</td>
                    <td>{{ orderline.getOrder().getId() }}</td>
                    <td>{{ orderline.getOrder().getPayment() }}</td>
                    <td>{{ orderline.getOrder().getCustid().getId() }}</td>
                    <td>{{ orderline.getProduct().getId() }}</td>
                    <td>{{ orderline.getQuantity() }}</td>  
                    <td>{{ orderline.getProduct().getPrice() }}</td>
                    {{% set var_1 = orderline.getProduct().getPrice() + var1|number_format(2,'.',',')%}}
                    {{% set var_2 = 3 + var2|number_format(2,'.',',') %}}
                    <td>{{ (var_1 * var_2 + var_1) }}</td>
                    <td>{{ orderline.getProduct().getVat() }}</td>
                    
                    
                </tr>
            {% else %}
                <strong>THE ORDERLINES TABLE IS EMPTY.</strong>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block footer %}
    {% include 'footer.html.twig' %}
{% endblock %} 