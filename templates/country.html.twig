{% extends "layout.html.twig" %}

{% block header %}
    {% include 'headerReport.html.twig' %}
{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="grid-container">
        <table border="1">
            <thead>
                <tr>
                    <td>COUNTRY ID</td>
                    <td>COUNTRY LABEL</td>
                </tr>
            </thead>
            <tbody>
                {% for country in countries %}
                    <tr>
                        <td>{{ country.getId() }}</td>
                        <td>{{ country.getName() }}</td>

                    </tr>
                {% else %}
                    <strong>LA TABLE USER EST VIDE</strong>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block footer %}
    {% include 'footer.html.twig' %}
{% endblock %}
