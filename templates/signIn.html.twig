{% extends "layout.html.twig" %}

{% block content %}
    <form method="post" action="" id="user_signIn">
        <div>
            <label>Lastname</label>
            <input type="text" name="user_lastname" id="lastname">
        </div>
        <div>
            <label>Firstname</label>
            <input type="text" name="user_firstname" id="firstname">
        </div>
        <div>
            <label>Username</label>
            <input type="text" name="user_username" id="username">
        </div>
        <div>
            <label>Email</label>
            <input type="email" name="user_email" id="email">
        </div>
        <div>
            <label>Password</label>
            <input type="password" name="user_password" id="password">
        </div>
        <div>
            <label>Confirm password</label>
            <input type="password" name="user_confirm_password" id="confirmPassword">
        </div>
        <div>
            <label>Do you want receive monthly report ?</label>
            <input type="checkbox" name="user_newsletter" id="checkBox_report">
        </div>
        <div>
            <label>Do you want receive newsletter ?</label>
            <input type="checkbox" name="user_newsletter" id="checkBox_newsletter">
        </div>

        <div class="g-recaptcha" data-sitekey="6LcisTwUAAAAAClgE-1c8OteBGKiGZb3xpV1hAwR"></div>
        <button type="submit">Send</button>
    </form>


{% endblock %}